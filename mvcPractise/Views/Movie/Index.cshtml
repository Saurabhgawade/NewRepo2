@model mvcPractise.Controllers.MyModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div>
    <h4>Movie</h4>
    <a  asp-asp-controller="Movie" asp-action="Create" class="btn btn-success">Create</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Director</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        @foreach (var item in Model.Movies)
        {
          <tr>
              <td>@item.id</td>
              <td>@item.Name</td>
              <td>@item.Director</td>
              <td>
                  <div>
                        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.id" class="btn btn-success">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                  </div>
              </td>
              
          </tr>
        }
        
    </table>
    
        
    

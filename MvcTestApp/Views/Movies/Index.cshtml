@model MvcTestApp.Controllers.myViewModel

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div>
    <div class="container row  pb-3 pt-5">
        
        <div class="col-6">
            <h2>Movies</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Director</th>
                <th>Action</th>
            </tr>
        </thead>
            <tbody>
                
                    @foreach (var item in Model.Movies)
                    {
                     <tr>
                         <td>@item.no</td>
                        <td>@item.Name</td>
                        <td>@item.Director</td>
                        <td>
                            <div>
                                <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.no" class="btn btn-primary">Edit</a>


                            <a asp-controller="Movies" asp-action="Delete" asp-route-id="@item.no" class="btn btn-danger">Delete</a>
                                </div>
                           
                        </td>
                    </tr>
                    }

                
            </tbody>
        
    </table>


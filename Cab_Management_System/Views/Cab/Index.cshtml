@{
}
@model Cab_Management_System.Controllers.MyView

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<a class="btn btn-primary ml-auto" asp-controller="Cab" asp-action="Create">Create</a>
<table class="table border">
    <thead>
        <tr>
            <th>Cab Id</th>
            <th>From</th>
            <th>Too</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CabList){

            <tr>
                <th>@item.CabId</th>
                <th>@item.From</th>
                <th>@item.Too</th>
                <th>@item.Amount</th>
                <th>
                    <div>
                        <a class="btn btn-primary" asp-controller="Cab" asp-action="Edit" asp-route-id=@item.CabId>Edit</a>
                        <a class="btn btn-danger" asp-controller="Cab" asp-action="Delete" asp-route-id="@item.CabId">Delete</a>
                    </div>
                </th>
            </tr>
        
        
        }
        

        
    </tbody>
</table>


